{
  "name": "SPMB Tuban Dev Stack",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/spmb-tuban-app",

  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },

  // --- TAMBAHAN BARU DI SINI ---
  "remoteEnv": {
    // Memaksa Docker CLI menggunakan API versi 1.43 agar cocok dengan Host Codespaces
    "DOCKER_API_VERSION": "1.43"
  },
  // -----------------------------

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ckolkman.vscode-postgres" 
      ]
    }
  },

  "forwardPorts": [3000, 3001, 3002, 4001, 4002, 5000, 5432],
  "postCreateCommand": "echo 'Container siap! Silakan cek docker ps'",
  "remoteUser": "root"
}